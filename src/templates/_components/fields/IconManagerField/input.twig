}

.icon-manager-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-width: 80px;
    padding: 1.5rem;
    background: #f9fafb;
    border: 2px dashed #d1d5db;
    border-radius: 5px;
    color: #9ca3af;
    transition: all 0.2s ease;
}

.icon-manager-placeholder:hover {
    border-color: #9ca3af;
    background: #f3f4f6;
}

.icon-manager-placeholder svg {
    color: #d1d5db;
}

.icon-manager-placeholder-text {
    margin-top: 0.75rem;
    font-size: 0.75rem;
    font-weight: 500;
    text-align: center;
    line-height: 1.2;
}

.icon-manager-actions {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-left: auto;
